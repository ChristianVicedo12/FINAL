@page
@model IskoWalk.Pages.IndexModel
<link rel="stylesheet" href="~/css/login.css" />

<div class="login-wrapper">

    @* LOGO *@
    <div class="left-panel">
        <img src="/images/IskoWalk.png" class="logo" />
        <p>No Isko Walks Alone.</p>
    </div>

    @* LOGIN *@
    <div class="right-panel">
        <div class="right-content">
            <div class="form-header">
                <h2>Welcome Back!</h2>
                <p>Sign in to your account to continue.</p>
            </div>

            <div id="errorMessage" style="display: none; color: #dc3545; padding: 10px; margin-bottom: 15px; border-radius: 5px; background: #fee;"></div>

            <form id="loginForm" onsubmit="handleLogin(event)">
                <input type="email" id="emailInput" placeholder="Email Address" required />
                <input type="password" id="passwordInput" placeholder="Password" required />
                <button type="submit" class="btn-main">Login</button>
            </form>

            <p class="small">
                Don't have an account?
                <a asp-page="/Signup" class="link">Sign Up</a>
            </p>
        </div>
    </div>
</div>

<script src="~/js/login.js"></script>
